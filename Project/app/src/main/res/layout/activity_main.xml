<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#000000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="140dp"
            android:background="@drawable/title5"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"></LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layout_gravity="center"
        android:padding="2dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout1"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_margin="2dp">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="ADD WORKOUT"
                android:id="@+id/btAddWorkout"
                android:background="@drawable/roundedbutton"
                android:textColor="@color/green"
                android:textSize="22sp"
                android:layout_marginBottom="15dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/layout2"
            android:layout_margin="2dp">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="VIEW WORKOUTS"
                android:id="@+id/btViewWorkout"
                android:background="@drawable/roundedbutton"
                android:textColor="@color/green"
                android:textSize="22sp"
                android:layout_marginBottom="15dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/layout5"
            android:layout_margin="2dp">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="VIEW LOGS"
                android:id="@+id/btViewLogs"
                android:textColor="@color/green"
                android:background="@drawable/roundedbutton"
                android:textSize="22sp"
                android:layout_marginBottom="15dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/layout3">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="RANDOM WORKOUT"
                android:id="@+id/btRandomWorkout"
                android:background="@drawable/roundedbutton"
                android:textColor="@color/green"
                android:textSize="22sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
